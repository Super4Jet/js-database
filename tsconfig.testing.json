{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": ".",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "mapRoot": "sourcemaps",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
  },
  "files": [
    "src/json_adapter.ts",
    "src/yaml_adapter.ts",
    "src/xml_adapter.ts",
    "src/database.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}